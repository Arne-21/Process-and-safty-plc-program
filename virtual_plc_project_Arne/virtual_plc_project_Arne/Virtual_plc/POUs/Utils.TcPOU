<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.15">
  <POU Name="AddTopping" SpecialFunc="Function" Id="{a1c7b6d1-0000-4f2a-a111-1234567890ab}">
    <Declaration><![CDATA[FUNCTION AddTopping : INT
VAR_INPUT
    available : BOOL; // Is this topping available?
    currentCount : INT; // current topping count
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[// Adds one topping if available and clamps to 4
IF available AND currentCount < 4 THEN
    currentCount := currentCount + 1;
END_IF;
AddTopping := currentCount;
]]></ST>
    </Implementation>
  </POU>
</TcPlcObject>
